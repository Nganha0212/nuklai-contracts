{
  "overrides": [
    {
      "files": "**.sol",
      "options": {
        "printWidth": 120,
        "compiler": "0.8.18",
        "tabWidth": 2,
        "useTabs": false,
        "singleQuote": true,
        "bracketSpacing": false,
        "trailingComma": "none",
        "explicitTypes": "always"
      }
    },
    {
      "files": ["**.ts", "**.js"],
      "options": {
        "printWidth": 100,
        "tabWidth": 2,
        "semi": true,
        "singleQuote": true,
        "useTabs": false,
        "endOfLine": "auto"
      }
    },
    {
      "files": "**.json",
      "options": {
        "tabWidth": 2,
        "printWidth": 200
      }
    }
  ]
}
